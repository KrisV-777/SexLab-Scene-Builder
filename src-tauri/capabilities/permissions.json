{
  "identifier": "global",
  "description": "permissions for the entire application",
  "local": true,
  "windows": [
    "*"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APP/*",
        "$RESOURCE",
        "$RESOURCE/*",
        "$RESOURCE/**"
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "dialog:default"
  ]
}